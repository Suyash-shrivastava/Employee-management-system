<style>
  .maincontainer {
    background: #29c278;
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .box {
    width: 70vw;
    height: auto;
    background: rgb(163, 214, 178);
    border-radius: 25px;
    padding: 15px;
  }
  .heading {
    font-size: 28px;
    font-weight: bold;
    letter-spacing: 2px;
    color: #041004;
    margin-bottom: 10px;
  }
  .days {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }
  .btn {
    color: rgb(91, 229, 22);
    width: 100%;
  }
</style>
<html>
  <head>
    <title>Employee Details Updation</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
    <script src="/javascripts/project.js"></script>
    <script>
      $(document).ready(function(){
        var dbgender=$('#dbgender').val().split(",")
        $('.gender').map((i,item)=>{
          dbgender.map((d)=>{
            if($(item).val()==d)
            {
              $(item).prop('checked',true)
            }
          })
        })
      })
    </script>
  </head>
  <div class="maincontainer">
    <div class="box">
      <div class="heading">
        <img src="/images/wipro.png" width="40" />
        Employee Details Updation
      </div>

      <form action="/employee/editdelete" method="post" class="row g-3">
        <input type="hidden" id="dbgender" value="<%=data.gender%>" />

        <div class="col-md-6">
          <label for="empid" class="form-label"><b>Employee ID</b></label>
          <input
            type="text"
            class="form-control"
            name="empid"
            id="empid"
            value="<%=data.empid%>"
          />
        </div>

        <div class="col-md-6">
          <label for="emptype" class="form-label"><b>Employee Type</b></label>
          <select id="emptype" name="emptype" class="form-select">
            <option><%=data.emptype%></option>
            <option>Intern</option>
            <option>Part-Time Employee</option>
            <option>Full-Time Employee</option>
          </select>
        </div>

        <div class="col-md-12">
          <label for="empname" class="form-label"><b>Employee Name</b></label>
          <input
            type="text"
            class="form-control"
            name="empname"
            id="empname"
            value="<%=data.empname%>"
          />
        </div>

        <div class="col-md-6">
          <label for="add" class="form-label"><b>Address</b></label>
          <input
            type="text"
            class="form-control"
            name="add"
            id="add"
            value="<%=data.address%>"
          />
        </div>

        <div class="col-md-6">
          <label for="dob" class="form-label"><b>Date Of Birth</b></label>
          <input
            type="date"
            class="form-control"
            name="dob"
            id="dob"
            value="<%=data.dob%>"
          />
        </div>

        <div class="col-md-6">
          <label for="city" class="form-label"><b>City</b></label>
          <select id="city" name="city" class="form-select">
            <option><%=data.city%></option>
          </select>
        </div>

        <div class="col-md-6">
          <label for="state" class="form-label"><b>State</b></label>
          <select id="state" name="state" class="form-select">
            <option><%=data.state%></option>
          </select>
        </div>

        <div class="col-md-12">
          <label class="form-check-label" for="gender" value=""
            ><b>Gender</b></label
          >
          <div class="days">
            <div class="form-check">
              <input
                class="form-check-input gender"
                type="radio"
                name="gender"
                id="male"
                value="male"
              />
              <label class="form-check-label" for="male"><b>Male</b></label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input gender"
                type="radio"
                name="gender"
                id="female"
                value="female"
              />
              <label class="form-check-label" for="female"><b>Female</b></label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input gender"
                type="radio"
                name="gender"
                id="other"
                value="other"
              />
              <label class="form-check-label" for="other"><b>Other</b></label>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <button type="submit" class="btn btn-primary" name="btn" value="Edit">
            <b>Edit</b>
          </button>
        </div>
        <div class="col-md-6">
          <button
            type="submit"
            class="btn btn-primary"
            name="btn"
            value="delete"
          >
            <b>Delete</b>
          </button>
        </div>
      </form>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"
  ></script>
</html>